
<div class="page-header">
	<h1>
		Admin <small>Users</small>
		<%= link_to new_admin_user_url, :class => 'btn btn-default btn-lg pull-right', :id => 'new_user' do %>
      <i class="glyphicon glyphicon-plus"></i>
    <% end %>
	</h1>
</div>

<%=
	#render "layouts/search"
%>

<div class="table-responsive">
<table class="table table-bordered table-striped">

  <thead>
    <tr>
      <td class="text-right">
        <strong>#</strong>
      </td>
      <td>
        <strong>Nombre</strong>
      </td>
      <td>
        <strong>Apellidos</strong>
      </td>
      <td>
        <strong>email</strong>
      </td>
      <td class="text-center">
        <strong>admin</strong>
      </td>
      <!--
      <td class="text-center">
        <strong>Ver</strong>
      </td>
      -->
      <td class="text-center">
        <strong>Editar</strong>
      </td>
      <td class="text-center">
        <strong>Borrar</strong>
      </td>
      <td class="text-center">
        <strong>Archive</strong>
      </td>
    </tr>
  </thead>

  <tbody>
  	<% @users.each_with_index do |user, n| %>
    <tr>
      <td class="text-right">
        <%= link_to n + 1, admin_user_url(user.id) %>
      </td>
      <td>
        <%=
					#link_to user.firstname, admin_user_url(user.id)
				%>
      </td>
      <td>
        <%=
					#link_to user.lastname, admin_user_url(user.id)
				%>
      </td>
      <td>
        <%= link_to user.email, admin_user_url(user.id) %>
      </td>
      <td class="text-center">
        <%= user.admin ? "<span class=\"glyphicon glyphicon-ok\" aria-hidden=\"true\"></span>".html_safe : "" %>
      </td>
      <!--
      <td class="text-center">
        <%= link_to admin_user_url(user.id), :class => "btn btn-info btn-lg" do %>
          <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
        <% end %>
      </td>
      -->
      <td class="text-center">
        <%= link_to edit_admin_user_url(user.id), :class => "btn btn-primary btn-lg" do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <% end %>
      </td>
      <td class="text-center">
        <%= link_to admin_user_url(user.id),
          method: :delete,
          data: { confirm: "Are you sure you want to delete this user?" },
          class: "btn btn-danger btn-lg" do %>
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        <% end %>
      </td>
      <td class="text-center">
        <%= link_to admin_user_url(user.id),
          method: :patch,
          data: { confirm: "Are you sure you want to archive this user?" },
          class: "btn btn-warning btn-lg" do %>
          <span class="glyphicon glyphicon-ban-circle" aria-hidden="true"></span>
        <% end %>
      </td>
    </tr>
    <% end %>

  <tbody>

  <tfoot>
    <tr>
      <td class="text-right">
        <strong>#</strong>
      </td>
      <td>
        <strong>Nombre</strong>
      </td>
      <td>
        <strong>Apellidos</strong>
      </td>
      <td>
        <strong>email</strong>
      </td>
      <td class="text-center">
        <strong>admin</strong>
      </td>
      <!--
      <td class="text-center">
        <strong>Ver</strong>
      </td>
      -->
      <td class="text-center">
        <strong>Editar</strong>
      </td>
      <td class="text-center">
        <strong>Borrar</strong>
      </td>
      <td class="text-center">
        <strong>Archive</strong>
      </td>
    </tr>
  </tfoot>

</table>
</div>

<div class="panel panel-default">
  <div class="panel-body">
    <h3 class="text-center">
      <%=
				#paginate @users 
			%>
    </h3>
  </div>
</div>
