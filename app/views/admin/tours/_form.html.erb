<%= simple_form_for([:admin, @tour]) do |f| %>

  <%= f.input :name %>

  <label for="description">Description</label>

  <%= f.input :description,
  	as: :text,
  	label: false,
  	class: 'form-control input-lg',
  	rows: '100'
  %>

  <%= f.input :price %>

  <%= f.input :latitude %>

  <%= f.input :longitude %>

  <div class="panel panel-default">
    <div class="panel-body">

      <div id="attachments">
        <h3>Images</h3>
        <%= render partial: "attachments/form", locals: { f: f, index: @index } %>
      </div>

      <p>
        <%=
          link_to "Add another image",
          new_attachment_path,
          remote: true,
          id: "add_file",
          data: { params: {index: tour.attachments.size} },
          class: 'btn btn-default btn-lg btn-block',
          role: 'button'
        %>
      </p>

    </div>
  </div>

  <%= f.button :submit, class: 'btn btn-info btn-lg btn-block' %>

<% end %>
