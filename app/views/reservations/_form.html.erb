<%= simple_form_for [tour, reservation] do |f| %>

  <%= f.input :customers, label: 'Enter No. customers', placeholder: 'Ej: 5' %>

  <%=
    f.input :date, as: :string,
    label: 'Enter Date',
    placeholder: 'Ej: yyyy-mm-dd',
    input_html: { class: "datepicker" }
  %>

  <%= f.input :departure_time, label: 'Departure time' %>

  <%= f.button :submit, class: 'btn btn-info btn-lg btn-block' %>

<% end %>

<script type="text/javascript">
  $(document).ready(function(){
     $(".datepicker").datepicker({format: 'yyyy-mm-dd'})
  });
</script>
