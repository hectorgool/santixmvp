<div class="col-md-4 col-md-offset-4">
  <div class="panel panel-default">
    <div class="panel-body">

      <%- if devise_mapping.omniauthable? %>
        <%= link_to user_facebook_omniauth_authorize_path, class: "btn btn-social btn-facebook btn-lg btn-block" do %>
          <i class="fa fa-facebook"></i> <%= t('login_with_facebook') %>
        <% end %>
      <% end -%>

      <br>
      <p class="lead text-center">
        <%= t('or') %>
      </p>

      <hr>
      <h1>Sign in</h1>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <%= devise_error_messages! %>
        <% flash.each do |key, value| %>
          <div class="alert alert-danger flash <%= key %>" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <%= value %>
          </div>
        <% end %>

        <%= f.input :email, label: t('email'), autofocus: true, class: "form-control input-lg" %>

        <%= f.input :password, label: t('password'), autocomplete: "off", class: "form-control input-lg" %>

        <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %>
          <%= f.label t('remember_me') %>
        <% end -%>

        <%= f.button :submit, "Log in", class: "btn btn-info btn-lg btn-block" %>

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-default btn-lg btn-block" %><br />
        <% end -%>

      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
