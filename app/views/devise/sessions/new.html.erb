<div class="col-md-4 col-md-offset-4">
  <div class="panel panel-default">
    <div class="panel-body">

      <div class="page-header">
        <h1>Sign in</h1>
      </div>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <%= devise_error_messages! %>
        <% flash.each do |key, value| %>
          <div class="alert alert-danger flash <%= key %>" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <%= value %>
          </div>
        <% end %>

        <%= f.input :email, label: t('email'), autofocus: true, class: "form-control input-lg" %>

        <%= f.input :password, label: t('password'), autocomplete: "off", class: "form-control input-lg" %>

        <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %>
          <%= f.label t('remember_me') %>
        <% end -%>

        <%= f.button :submit, "Log in", class: "btn btn-info btn-lg btn-block" %>

      <% end %>

      <%= render "devise/shared/links" %>

      <!--<p class="lead text-center">OR</p>-->

      <%= 
        #render "layouts/links" 
      %>

    </div>
  </div>
</div>
