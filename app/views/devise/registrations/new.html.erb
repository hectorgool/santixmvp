<div class="col-md-4 col-md-offset-4">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="page-header">
        <h1>Sign up</h1>
      </div>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <!--<%= devise_error_messages! %>-->

        <%=
          f.input :firstname, label: 'Firstname', placeholder: 'Ej: Rodolfo'
        %>

        <%=
          f.input :lastname, label: 'Lastname', placeholder: 'Ej: Guzman Huerta'
        %>

        <%= f.input :email, label: 'Email', placeholder: 'Ej: santo@santo.com' %>

        <%= f.input :password, autocomplete: "off" %>

        <% if @minimum_password_length %>
          <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
        <% end %>

        <%= f.input :password_confirmation, autocomplete: "off" %>

        <%= f.button :submit, "Sign up", class: "btn btn-info btn-lg btn-block" %>

      <% end %>

      <%=
        render "devise/shared/links"
      %>

      <!--<p class="lead text-center">OR</p>-->

      <%=
        #render "layouts/links"
      %>

    </div>
  </div>
</div>
