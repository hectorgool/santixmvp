<div class="col-md-4 col-md-offset-4">
  <div class="panel panel-default">
    <div class="panel-body">
      
      <%- if devise_mapping.omniauthable? %>
        <%= link_to user_facebook_omniauth_authorize_path, class: "btn btn-social btn-facebook btn-lg btn-block" do %>
          <i class="fa fa-facebook"></i> <%= t('login_with_facebook') %>
        <% end %>
      <% end -%>

      <br>
      <p class="lead text-center">
        <%= t('or') %>
      </p>

      <hr>
      <h1>Sign up</h1>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <!--<%= devise_error_messages! %>-->

        <%=
          f.input :firstname, label: 'Firstname', placeholder: 'Ej: Rodolfo'
        %>

        <%=
          f.input :lastname, label: 'Lastname', placeholder: 'Ej: Guzman Huerta'
        %>

        <%= f.input :email, label: 'Email', placeholder: 'Ej: santo@santo.com' %>

        <%= f.input :password, autocomplete: "off" %>

        <% if @minimum_password_length %>
          <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
        <% end %>

        <%= f.input :password_confirmation, autocomplete: "off" %>

        <%= f.button :submit, "Sign up", class: "btn btn-info btn-lg btn-block" %>

      <% end %>

      <%=
        render "devise/shared/links"
      %>

    </div>
  </div>
</div>
